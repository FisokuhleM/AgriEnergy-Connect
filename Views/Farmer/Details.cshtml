@model List<AgriEnergyConnect.Models.Product>

@{
    ViewData["Title"] = $"Farmer's Products";
}
<div class="text-center">
    <h2 class="my-4">Products</h2>

    <!-- Centering the form -->
    <div class="d-flex justify-content-center">
        <form asp-action="Details" method="get" class="my-1 p-2" style="width: 100%; max-width: 500px;">
            <div>
                <h5>Filter search</h5>
                <div class="my-2">
                    <input type="text" name="searchString" placeholder="Product Name or Category" class="form-control form-control-sm" />
                </div>
                <h5>Date Range</h5>
                <div class="my-2 d-flex justify-content-between">
                    <input type="date" name="minDate" class="form-control form-control-sm" style="width: 45%;" />
                    <span>&#8212;</span>
                    <input type="date" name="maxDate" class="form-control form-control-sm" style="width: 45%;" />
                </div>
                <div class="d-flex justify-content-between my-2">
                    <input type="submit" value="Filter" class="btn btn-outline-success btn-sm" />
                    <a asp-action="Details" class="btn btn-outline-secondary btn-sm">Clear</a>
                </div>
            </div>
        </form>
    </div>

    @if (ViewBag.Message != null)
    {
        <p>@ViewBag.Message</p>
    }
    else
    {
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card my-2 store-card">
                            <img src="@product.imageURL" class="card-img-top" />
                            <div class="card-body">
                                <h5 class="card-title">@product.Name</h5>
                                <p class="card-text">@product.Category</p>
                                <p class="card-text">@product.ProdDate</p>
                            </div>
                    </div>
                </div>
            }
        </div>
    }
</div>