@using Microsoft.AspNetCore.Identity
@model List<IdentityUser>

@{
    ViewData["Title"] = "Farmers";
}

<h1 class="text-center">Farmers</h1>
<hr />
<div class="text-center mb-3">
    <a id="register" class="btn btn-success" asp-area="Identity" asp-page="/Account/Register">Add Farmer</a>
</div>

<div class="row justify-content-center">
    @foreach (var farmer in Model)
    {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex justify-content-center">
            <div class="card my-2 store-card text-center">
                    <div class="card-body d-flex flex-column align-items-center">
                        <img src="~/images/user-icon.png" class="user-icon img-fluid rounded-circle mb-2" alt="User Icon">
                        <h5 class="card-title mt-2">@farmer.UserName</h5>
                    </div>
                <a asp-controller="Farmer" asp-action="Details" class="btn btn-success" asp-route-id="@farmer.Id" class="a-cleanup">View Products</a>
            </div>
        </div>
    }
</div>

<style>
    .user-icon {
        width: 100px; /* Adjust the size as needed */
        height: 100px; /* Ensure the height matches the width for a perfect circle */
        object-fit: cover; /* Ensures the image covers the circle properly */
    }

    .rounded-circle {
        border-radius: 50%; /* Makes the image a circle */
    }

    .store-card {
        width: 100%; /* Ensures cards have a consistent width */
        max-width: 250px; /* Adjust max-width as needed */
    }

    .a-cleanup {
        text-decoration: none;
        color: inherit;
    }
</style>